<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="TextFieldScroll" parent="@android:style/Widget.ScrollView">
        <item name="android:background">@color/textfield_bg</item>
        <item name="android:padding">@dimen/textfield_padding</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:fillViewport">true</item>
    </style>
    
    <style name="TextFieldTextView" parent="@android:style/Widget.TextView">
    	<item name="android:textColor">@color/textfield_text</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/textfield_textsize</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:selectable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

    <!-- Colors -->
    <color name="button_blue">#0000FF</color>
    <color name="button_green">#00FF00</color>
    <color name="button_normal">#AAAAAA</color>
    <color name="button_orange">#FF9900</color>
    <color name="button_red">#FF0000</color>
    <color name="button_disabled_text">#DDDDDD</color>
    <color name="button_text">#000000</color>
    <color name="textfield_bg">#C4D4C4</color>
    <color name="textfield_text">#000000</color>
</resources>